            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.apache.abdera</groupId>
            <artifactId>abdera-extensions-html</artifactId>
            <version>1.1</version>
        </dependency>

        <dependency>
            <groupId>org.apache.abdera</groupId>
